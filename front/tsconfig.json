{
  "compilerOptions": {
    "rootDirs": [
      "./src",
      "./typings"
    ],
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "es2015",
      "es2015.promise",
      "dom",
      "es5"
    ],
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@src": [
        "./src/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "gql/*": [
        "./src/gql/*"
      ]
    }
  },
  "include": [
    "src/*",
    "typings/*"
  ],
  "files": [
    "./typings/types.d.ts",
    "./typings/external.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}