{
  "compilerOptions": {
    "rootDirs": [
      "./src",
    ],
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "es2015.promise",
      "dom"
    ],
    "removeComments": true,
    "allowJs": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@gql/*": [
        "./src/queries/*"
      ],
      "@hoc/*": [
        "./src/hoc/*"
      ],
      "@actions/*": [
        "./src/actions/*"
      ],
      "@comp/*": [
        "./src/components/*"
      ],
      "@test/*": [
        "./test/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "files": [
    "./typings/types.d.ts",
    "./typings/external.d.ts",
    "./typings/graphql.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}