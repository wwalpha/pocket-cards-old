{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist/tsc",
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "es2015.promise",
      "dom",
      "es7",
      "esnext"
    ],
    "removeComments": true,
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    // "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "sourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "test/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist/**/*",
    "distzip/**/*",
    "webpack/**/*",
    "deploy.ts",
    "test"
  ]
}